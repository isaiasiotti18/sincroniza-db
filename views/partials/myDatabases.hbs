<table class="table">
	<thead>
		<tr>
			<th class="text-center align-middle" scope="col">ID</th>
			<th class="text-center align-middle" scope="col">ATIVO</th>
			<th class="text-center align-middle" scope="col">TYPE</th>
			<th class="text-center align-middle" scope="col">HOST</th>
			<th class="text-center align-middle" scope="col">PORTA</th>
			<th class="text-center align-middle" scope="col">USUARIO</th>
			<th class="text-center align-middle" scope="col">PASSWORD</th>
			<th class="text-center align-middle" scope="col">NOME BD</th>
			<th class="text-center align-middle" scope="col">INFO TABELA</th>
			<th class="text-center align-middle" scope="col">AÇÕES</th>
		</tr>
	</thead>
	<tbody>
		{{#each databases}}
		<tr>
			<th class="text-center align-middle" scope="row">{{ id }}</th>

			<th class="text-center align-middle" scope="row">
				{{#if active}}
					<div class="form-check form-switch">
						<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckCheckedDisabled" checked disabled>
					</div>					
				{{else}}
					<div class="form-check form-switch">
						<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
					</div>				
				{{/if}}
			</th>

			<td class="text-center align-middle">{{ type }}</td>
			<td class="text-center align-middle">{{ host }}</td>
			<td class="text-center align-middle">{{ port }}</td>
			<td class="text-center align-middle">{{ username }}</td>
			<td class="text-center align-middle">{{ password }}</td>
			<td class="text-center align-middle">{{ db_name }}</td>
			<td class="text-center align-middle">

				<!-- Button trigger modal -->
				<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
						<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
						<path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
					</svg>
				</button>

				<!-- Modal -->
				<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<h1 class="modal-title fs-5" id="exampleModalLabel">INFORMAÇÕES DA TABELA.</h1>
								<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
							</div>
							<div class="modal-body">
								<ul class="list-group">
									<li class="list-group-item text-start"><b>Nome da tabela:</b> {{ table_name }}</li>
									<li class="list-group-item text-start"><b>Coluna nome/desc produto:</b> {{ product_columnName }}</li>
									<li class="list-group-item text-start"><b>Coluna estoque/qtd produto:</b> {{ product_columnQtd }}</li>
									<li class="list-group-item text-start"><b>Coluna valor/preço produto:</b> {{ product_columnPrice }}</li>
								</ul>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
							</div>
						</div>
					</div>
				</div>

			</td>
			<td>

				{{!-- EXCLUIR --}}
				<button class="btn btn-danger m-2">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
						<path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
						<path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
					</svg>
				</button>

				{{!-- EDITAR INFORMAÇÕES --}}
				<button class="btn btn-warning m-2">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
						<path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
						<path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
					</svg>					
				</button>

				{{!-- FORÇAR ENVIO DOS PRODUTOS --}}
				<button class="btn btn-success m-2">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-down" viewBox="0 0 16 16">
						<path fill-rule="evenodd" d="M3.5 10a.5.5 0 0 1-.5-.5v-8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 .5.5v8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 0 0 1h2A1.5 1.5 0 0 0 14 9.5v-8A1.5 1.5 0 0 0 12.5 0h-9A1.5 1.5 0 0 0 2 1.5v8A1.5 1.5 0 0 0 3.5 11h2a.5.5 0 0 0 0-1h-2z"/>
						<path fill-rule="evenodd" d="M7.646 15.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 14.293V5.5a.5.5 0 0 0-1 0v8.793l-2.146-2.147a.5.5 0 0 0-.708.708l3 3z"/>
					</svg>					
				</button>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>